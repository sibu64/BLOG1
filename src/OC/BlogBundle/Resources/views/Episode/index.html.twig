{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}
    

{% block body %}
    <div class="container">
    <h1>Liste des épisodes</h1>
    
    <table class=" table table-responsive table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Creation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td><a href="{{ path('admin_episode_show', { 'id': episode.id }) }}">{{ episode.id }}</a></td>
                <td>{{ episode.titre }}</td>
                <td>{% if episode.creation %}{{ episode.creation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_episode_show', { 'id': episode.id }) }}">Montrer</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_episode_edit', { 'id': episode.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li class="center">
            <a class="btn btn-success btn-block" href="{{ path('admin_episode_new') }}">Créer un nouvel épisode</a>
        </li>
        <li>
           <a class="btn btn-primary btn-block" href="{{url('admin_commentaire_index')}}">Gérer les commentaires</a>
        </li>
        <li>
        <a class="btn btn-danger btn-block" style="margin-top:10px;" href="{{path('oc_user_logout')}}">Se déconnecter</a>
        </li>
    </ul>
    </div>
           
{% endblock %}
